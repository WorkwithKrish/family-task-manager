# Backend
FROM node:18-alpine AS backend
WORKDIR /app
COPY backend .
RUN npm install
CMD ["npm", "run", "dev"]

# Frontend
FROM node:18-alpine AS frontend
WORKDIR /app
COPY frontend .
RUN npm install && npm run build

# Serve with Nginx
FROM nginx:alpine
COPY --from=frontend /app/dist /usr/share/nginx/html
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
